{
  "name": "electron-journal",
  "version": "0.1.0",
  "repository": "https://github.com/swalker326/electron-journal",
  "description": "An electron app for journaling. Using Trpc, Prisma, React, and Vite.",
  "main": "dist/server/main.js",
  "scripts": {
    "build": "vite build && prisma generate && tsc --build && node copy-files.js && node install-engines-on-mac.js",
    "start": "npm run build && cross-env NODE_ENV=development electron .",
    "dev": "concurrently \"npm run dev:build\" \"cross-env NODE_ENV=development electronmon .\"",
    "dev:build": "vite dev && prisma generate && tsc --build && node copy-files.js && node install-engines-on-mac.js",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "publish": "npm run build && dotenv -- electron-builder -p always"
  },
  "author": "Shane Walker",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^18.11.17",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^6.0.0",
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "electron-notarize": "^1.2.1",
    "electronmon": "^2.0.2",
    "fs-extra": "^11.1.0",
    "postcss": "^8.4.32",
    "replace-in-file": "^6.3.5",
    "tailwindcss": "^3.3.6",
    "typescript": "^4.9.4",
    "vite": "^4.0.2"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "@prisma/client": "^5.7.0",
    "@prisma/engines": "^5.7.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-tabs": "^1.0.4",
    "@tanstack/react-query": "^4.36.1",
    "@trpc/client": "^10.5.0",
    "@trpc/react-query": "^10.44.1",
    "@trpc/server": "^10.5.0",
    "@vitejs/plugin-react": "^4.2.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "electron-log": "^4.4.8",
    "lucide-react": "^0.294.0",
    "prisma": "^5.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.20.1",
    "superjson": "^1.12.1",
    "tailwind-merge": "^2.1.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4"
  }
}
